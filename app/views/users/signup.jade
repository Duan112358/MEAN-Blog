extends auth

block auth
  form.form-horizontal(action="/users", method="post",name="signupForm")
    .panel.panel-info.animated.fadeIn
      .panel-heading
        h4.panel-title Signup
      .panel-body
        .form-group
          label.control-label.col-md-3(for='name') Full name
          .col-md-9
            input.form-control#name(type='text', name="name", placeholder='Full name', value=user.name, required)

        .form-group
          label.control-label.col-md-3(for='email') Email
          .col-md-9
            input.form-control#email(type='text', name="email", placeholder='Email', value=user.email, required)

        .form-group
          label.control-label.col-md-3(for='username') Username
          .col-md-9
            input.form-control#username(type='text', name="username", placeholder='Username', value=user.username, required)

        .form-group
          label.control-label.col-md-3(for='password') Password
          .col-md-9
            input.form-control#password(type='password', name="password", placeholder='Password', required)

        .form-group
          .col-md-offset-3.col-md-9
            button.btn.btn-primary(type='submit') Sign up
            &nbsp;
            | or&nbsp;
            a.show-login(href="/signin") login

extends auth

block auth
  form.form-horizontal(action="/users/session", method="post",name="signinForm")
    .panel.panel-info.animated.fadeIn
      .panel-heading
        h4.panel-title Signin
      .panel-body
        if(!!message)
          p.text-error= message
        .form-group
          .input-group.col-md-offset-1.col-md-10
            span.input-group-addon
              i.icon-envelope
            input.form-control(type='text', name="email", placeholder='Email', required)
        .form-group
          .input-group.col-md-offset-1.col-md-10
            span.input-group-addon
              i.icon-key
            input.form-control(type='password', name="password", placeholder='Password', required)

        .form-group
          .col-md-offset-1.col-md-10
            button.btn.btn-primary(type='submit', ng-disabled="signinForm.$invalid") Sign in
            &nbsp;
            | or&nbsp;
            a.show-signup(href="/signup") Sign up
